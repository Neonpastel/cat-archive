html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Neonpastel.net
        link(rel="stylesheet", href="index/style.scss")

        script(src="index/import.js" type="module")
        script(src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.min.js") 
    body
        nav
            ul
                +nav("Denperidge")
                    include:markdown-it 1-nav/Denperidge.md
                +nav("Neonpastel.net")
                    include:markdown-it 1-nav/Neonpastel.md
                +nav("Skunkat")
                    include:markdown-it 1-nav/Skunkat.md
                +nav("Thannasanna")
                    include:markdown-it 1-nav/Thannasanna.md
